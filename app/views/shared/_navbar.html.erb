<div class="bg-light d-flex justify-content-between p-3">
  <div>
    <%= link_to flats_path, class: 'text-dark text-decoration-none' do %>
      <h3>Simple Airbnb</h3>
    <% end %>
  </div>
  <div class="d-flex">
    <%= simple_form_for :search, url: flats_path, method: :get do |f| %>
      <div class="d-flex">
        <%= f.input_field :query, label: false, class: 'form-control me-2' %>
        <%= f.button :submit, "Search", class: 'btn btn-outline-success' %>
      </div>
    <% end %>
    <%= link_to 'Add flat', new_flat_path, class: 'btn btn-outline-primary ms-3' %>
  </div>
</div>


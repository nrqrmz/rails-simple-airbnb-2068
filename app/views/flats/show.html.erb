<div class="container mt-5">
  <div class="row">
    <div class="col-8">
      <div class="bg-light p-4">
        <h1><%= @flat.name %></h1>
        <h5><%= @flat.address %></h5>
      </div>
      <div class="mt-4 bg-light p-4">
        <h2>A bit more about this flat...</h2>
        <h6><%= @flat.description %></h6>
      </div>
      <div class="mt-4 bg-light p-4">
        <h2>Details</h2>
        <div class="d-flex">
            <div class="d-flex"><p class="me-2"><i class="fa-solid fa-user"></i></p><h5><%= @flat.number_of_guests %></h5></div>
            <div class="d-flex ms-4"><p class="me-1"><i class="fa-solid fa-dollar-sign"></i></p><h5><%= @flat.price_per_night %></h5></div>
          </div>
      </div>
    </div>
    <div class="col-4"></div>
  </div>
</div>
